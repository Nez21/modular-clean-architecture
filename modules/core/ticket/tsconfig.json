{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../../libs/common"
    },
    {
      "path": "../../../libs/building-blocks"
    }
  ],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "vitest.config.mts"]
}
